<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!--android:background="@drawable/list_item_ripple"-->
    <!--android:drawSelectorOnTop="true"-->

    <!--
    <View android:id="@+id/report_status_color"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#505050"/>
    -->

    <ImageView android:id="@+id/report_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <!--android:background="@drawable/check"-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical">
        <TextView android:id="@+id/report_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="20sp"
            android:textColor="#505050"
            android:text="Manila Mall"
            android:fontFamily="sans-serif-light"/>
        <TextView android:id="@+id/report_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#808080"
            android:text="For Verification"/>
        <TextView android:id="@+id/report_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#808080"
            android:text="12:00 PM | July 12, 2015"/>

    </LinearLayout>

</LinearLayout>
